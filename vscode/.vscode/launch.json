{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (OpenOCD)",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/${workspaceFolderBasename}.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "interface": "swd",
            "showDevDebugOutput": "raw",
            "runToEntryPoint": "main",
            "device": "STM32F429ZI",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "svdFile": "${workspaceRoot}/tools/STM32F429.svd",
            "preLaunchTask": "Build Debug"
        },
        {
            "name": "Debug (OpenOCD) with SWO",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/${workspaceFolderBasename}.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "interface": "swd",
            "showDevDebugOutput": "raw",
            "runToEntryPoint": "main",
            "device": "STM32F429ZI",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg",
            ],
            "svdFile": "${workspaceRoot}/tools/STM32F429.svd",
            "swoConfig": {
                "enabled": true,
                "cpuFrequency": 180000000,
                "swoFrequency": 2000000,
                "source": "probe",
                "decoders": [
                    {
                        "type": "console",
                        "label": "SWO",
                        "port": 0,
                        // "encoding": "ascii",
                        "showOnStartup": true,
                    }
                ]
            },
        }
    ]
}